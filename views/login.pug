            title eStudio-4

      body 

            div.container

                  div.col-md-6

                  div.col-md-5.mx-auto.bg-light.border.rounded(style="padding:70px;transform: translate(0, 25%);")

                        div.mb-5 

                              p.h3 Signin To Marketing Studio

                                    img(src="images/logo.png", height="30" width="30" alt="logo", srcset="" style="padding-right:7px;")

                                    p 

                                          span.opacity-25(id="") You have must sign in before access webreporting.

                        form.form_login(action ="javascript:void(0);" method="POST" autocomplete="off")

                              input#action(type="hidden" value="login")

                              div.input-group.form-group.mt-3

                                    div.input-group-prepend

                                          span.input-group-text(style="height: 44px;width: 60px;background: #ffeb3ba6;padding-left: 22px;color:#4646bb")

                                                i.fa-solid.fa-user

                                    input#userName.form-control(type="text" value="" placeholder="Username" required)



                              div.input-group.form-group.mt-3

                                    div.input-group-prepend

                                          span.input-group-text(style="height: 44px;width: 60px;background: #ffeb3ba6;padding-left: 22px;color:#4646bb")

                                                i.fa-solid.fa-key

                                    input#userPassword.form-control.passwordLogin.block.w-full(type="password" value ="" placeholder="Password" name="userPassword" required)

                                    span#togglePasswordLogin.input-group-text

                                          i(data-feather="eye" style="cursor: pointer")

                              div.form-check

                              input#rememberMe.form-check-input(type="checkbox" name="rememberME")

                              label.form-check-label.ps-2(for="rememberMe") Remember Me

                              button#btn_submit.btn.btn-info.mt-3.float-end(type="submit")  Login

                        div.mt-3

                              p#message.mt-5.text-center

